<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="DialogTheme">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:windowBackground">@color/dialogBackground</item>
    </style>

    <style name="LanLayout">
        <item name="android:layout_width">798px</item>
        <item name="android:layout_height">460px</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">140px</item>
    </style>

    <style name="LanTextMessage">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40px</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="LanTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#80FFFFFF</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="LanTextLabel" parent="LanTextView">
        <item name="android:layout_width">170px</item>
        <item name="android:layout_height">50px</item>		<item name="android:textSize">25px</item>
    </style>

    <style name="LanTextContent" parent="LanTextView">
        <item name="android:layout_width">600px</item>
        <item name="android:layout_height">50px</item>
        <item name="android:paddingLeft">10px</item>
        <item name="android:background">@drawable/setting_ip_bar</item>
    </style>

    <style name="Button1">
        <item name="android:layout_width">218px</item>
        <item name="android:layout_height">72px</item>
        <item name="android:background">@drawable/button_1</item>
        <item name="android:paddingBottom">18px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="DigitWheelView">
        <item name="android:layout_width">35px</item>
        <item name="android:layout_height">52px</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Button2">
        <item name="android:layout_width">140px</item>
        <item name="android:layout_height">72px</item>
        <item name="android:background">@drawable/button_2</item>
        <item name="android:paddingBottom">20px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="Button4">
        <item name="android:layout_width">200px</item>
        <item name="android:layout_height">90px</item>
        <item name="android:background">@drawable/button_4</item>
        <item name="android:padding">10px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">38px</item>
    </style>

    <style name="Button5">
        <item name="android:layout_width">300px</item>
        <item name="android:layout_height">60px</item>
        <item name="android:background">@drawable/button_5</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">38px</item>
    </style>

    <style name="BigDialog">
        <item name="android:layout_width">880px</item>
        <item name="android:layout_height">580px</item>
    </style>

    <style name="SmallDialog">
        <item name="android:layout_width">580px</item>
        <item name="android:layout_height">480px</item>
    </style>

    <style name="SettingDialog" parent="@android:Theme.Dialog">
        
 <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
 <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
 <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
 <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
 <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
 <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
        
        <item name="android:background">@android:color/transparent</item> 
    </style>

</resources>